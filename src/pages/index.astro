---
import GuestForm from '../components/GuestForm.astro';
import GuestList from '../components/GuestList.astro';

let guests = []; // Lista reactiva para invitados

// Función para añadir invitados
function addGuest(guest) {
  guests = [...guests, guest]; // Actualiza la lista de invitados
}

// Función para eliminar un invitado
function removeGuest(index) {
  guests = guests.filter((_, i) => i !== index); // Filtra los invitados eliminando el seleccionado
}
---
<html>
  <head>
    <title>Lista de Invitados</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #6200ea;
        color: white;
        padding: 1rem 0;
        text-align: center;
      }

      main {
        padding: 2rem;
        max-width: 600px;
        margin: 0 auto;
      }

      .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2rem;
      }

      .table th,
      .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
      }

      .table th {
        background-color: #6200ea;
        color: white;
        font-weight: bold;
      }

      .button {
        background-color: #6200ea;
        color: white;
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .button:hover {
        background-color: #4500b5;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Lista de Invitados - Fiesta</h1>
    </header>
    <main>
      <!-- Componente de formulario -->
      <GuestForm addGuest={addGuest} />
      <!-- Componente de lista -->
      <GuestList guests={guests} removeGuest={removeGuest} />
    </main>
  </body>
</html>
