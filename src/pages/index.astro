---
import GuestForm from '../components/GuestForm.astro';
import GuestList from '../components/GuestList.astro'; 
let guests = [];

function addGuest(guest) {
  guests = [...guests, guest];
}

function removeGuest(index) {
  guests = guests.filter((_, i) => i !== index);
}
---
<html>
  <head>
    <title>Fiesta de Despedida</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        color: #333;
        margin: 0;
        padding: 0;
      }
      header {
        background-color: #6200ea;
        color: white;
        padding: 1rem 0;
        text-align: center;
      }
      main {
        padding: 2rem;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Â¡Mi Fiesta de Despedida!</h1>
    </header>
    <main>
      <GuestForm addGuest={addGuest} />
      <GuestList guests={guests} removeGuest={removeGuest} />
    </main>
  </body>
</html>
