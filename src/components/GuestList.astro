---
export let guests = [];
export let removeGuest;
---

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Preferencia alimenticia</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    {guests.length === 0 ? (
      <tr>
        <td colspan="3" style="text-align: center;">No hay invitados a√∫n.</td>
      </tr>
    ) : (
      guests.map((guest, index) => (
        <tr key={index}>
          <td>{guest.name}</td>
          <td>{guest.foodPreference}</td>
          <td>
            <button class="button" on:click={() => removeGuest(index)}>Eliminar</button>
          </td>
        </tr>
      ))
    )}
  </tbody>
</table>
